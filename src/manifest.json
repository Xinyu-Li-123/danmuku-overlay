{
	"manifest_version": 3,
	"name": "Danmaku Overlay",
	"version": "1.0",
	"description": "Add an overlay of danmaku on top of a video, including those in iframes.",
	"permissions": [
	  "activeTab",
	  "scripting"
	],
	"background": {
	  "service_worker": "background.js"
	},
	"content_scripts": [
	  {
		"matches": ["<all_urls>"],
		"js": ["content.js"],
		"all_frames": true
	  }
	],
	"action": {
	  "default_popup": "popup.html",
	  "default_icon": {
		"16": "icon.png",
		"48": "icon.png",
		"128": "icon.png"
	  }
	},
	"icons": {
	  "16": "icon.png",
	  "48": "icon.png",
	  "128": "icon.png"
	}
  }
  